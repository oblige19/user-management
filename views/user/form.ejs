<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/user.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="user-form" action="/<% if(!isEdit) { %>add<% } else { %>update <% } %>" method="POST">
            <% if (isEdit) { %>
                <input type="hidden" name="id" value="<%= user.id %>">
            <% } %>
            <div class="form-control">
                <label for="firstName">First Name</label>
                <input type="text" name="firstName" id="firstName" value="<% if(isEdit) { %><%= user.firstName %><% } %>">
            </div>
            <div class="form-control">
                <label for="lastName">Last Name</label>
                <input type="text" name="lastName" id="lastName" value="<% if(isEdit) { %><%= user.lastName %><% } %>">
            </div>
            <div class="form-control">
                <label for="address">Address</label>
                <input type="text" name="address" id="address" value="<% if(isEdit) { %><%= user.address %><% } %>">
            </div>
            <div class="form-control">
                <label for="postCode">Post Code</label>
                <input type="text" name="postCode" id="postCode" value="<% if(isEdit) { %><%= user.postCode %><% } %>">
            </div>
            <div class="form-control">
                <label for="phoneNumber">Phone Number</label>
                <input type="text" name="phoneNumber" id="phoneNumber" value="<% if(isEdit) { %><%= user.phoneNumber %><% } %>">
            </div>
            <div class="form-control">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" value="<% if(isEdit) { %><%= user.email %><% } %>">
            </div>
            <div class="form-control">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" value="<% if(isEdit) { %><%= user.username %><% } %>">
            </div>
            <% if (!isEdit) { %>
                <div class="form-control">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password">
                </div>
            <% } %>
            <button class="btn" type="submit">
                Save
            </button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>